
@using ToDoListWebApp.Models.DomainModels
@model ToDoListWebApp.Models.ViewModels.TaskViewModel

@{
    ViewData["Title"] = "Création";
}

<h2 class="header-creation center">Creation de tâche</h2>
<div class="row">
    <div class="col-md-10 mx-auto">
        <form asp-action="Create" class="form-creation">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Task.Nom" class="control-label"></label>
                <input asp-for="Task.Nom" class="form-control" />
                <span asp-validation-for="Task.Nom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Task.Description" class="control-label"></label>
                <input asp-for="Task.Description" class="form-control" />
                <span asp-validation-for="Task.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Task.DateLimite" class="control-label"></label>
                <input asp-for="Task.DateLimite" class="form-control" />
                <span asp-validation-for="Task.DateLimite" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Task.Priorite" class="control-label"></label>
                @if (Model?.PrioriteList != null && Model.PrioriteList.Count > 0)
                {
                    <select asp-for="Task.Priorite" class="form-select" asp-items="@(new SelectList(Model.PrioriteList, "Id", "Libelle"))">
                        <option>-- Sélectionner une priorité --</option>
                    </select>
                }
                else
                {
                    <select asp-for="Task.Priorite" class="form-select">
                        <option>-- Aucune priorité disponible --</option>
                    </select>
                }
                <span asp-validation-for="Task.Priorite" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Task.Categorie" class="control-label"></label>
                <input asp-for="Task.Categorie" class="form-control" />
                <span asp-validation-for="Task.Categorie" class="text-danger"></span>
            </div>
            <div class="form-button-creation pt-5">
                <input type="submit" value="Créer" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Retour à la liste</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
